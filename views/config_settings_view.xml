<odoo>
    <data>
          <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.contatos_webhook</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Contatos Webhook" string="Contatos Webhook" data-key="x_contatos_webhook">
                          <h2>Textos Padrão</h2>
                        <div class="row mt16 o_settings_container">
                             <div class="col-12 col-lg-6 o_setting_box">
                                 <div class="o_setting_left_pane">
                                     <field name="use_default_text_2" widget="setting_boolean"/>
                                 </div>
                                 <div class="o_setting_right_pane">
                                    <label for="default_text_2"/>
                                    <field name="default_text_2" widget="setting_text" attrs="{'required': [('use_default_text_2','=', True)]}"/>
                                 </div>
                             </div>
                             <div class="col-12 col-lg-6 o_setting_box">
                                 <div class="o_setting_left_pane">
                                    <field name="use_default_text_3" widget="setting_boolean"/>
                                 </div>
                                 <div class="o_setting_right_pane">
                                     <label for="default_text_3"/>
                                     <field name="default_text_3" widget="setting_text" attrs="{'required': [('use_default_text_3','=', True)]}"/>
                                 </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                  <div class="o_setting_left_pane">
                                   <field name="use_default_text_4" widget="setting_boolean"/>
                                 </div>
                                <div class="o_setting_right_pane">
                                     <label for="default_text_4"/>
                                    <field name="default_text_4" widget="setting_text" attrs="{'required': [('use_default_text_4','=', True)]}"/>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                               <div class="o_setting_left_pane">
                                   <label for="default_text" string="Texto Padrão"/>
                                 </div>
                                <div class="o_setting_right_pane">
                                    <field name="default_text" widget="setting_text"/>
                                </div>
                            </div>
                             <div class="col-12 col-lg-6 o_setting_box">
                               <div class="o_setting_left_pane">
                                   <label for="webhook_url" string="URL do Webhook"/>
                                 </div>
                                <div class="o_setting_right_pane">
                                    <field name="webhook_url" widget="setting_text"/>
                                </div>
                            </div>
                        </div>
                    </div>
                 </xpath>
            </field>
        </record>
    </data>
</odoo>